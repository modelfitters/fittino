<!DOCTYPE InputFile PUBLIC "" "InputFile.dtd">

<InputFile>

  <VerbosityLevel
   Level = "ALWAYS"
   />

  <ExecutionMode
   Mode = "SAMPLING"
   />

  <Model
   ModelType  = "Rosenbrock"
   Dimensions = "2"
   X1         = "-1."
   X2         = "-1."



   />

  <Sampler
   NumberOfIterations = "50000"
   UpdateCovariancesAfter = "1000"
   SamplerType        = "Covariant"
   />

</InputFile>
