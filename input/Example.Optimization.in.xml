<!DOCTYPE InputFile PUBLIC "" "InputFile.dtd">

<InputFile>

  <VerbosityLevel
   Level = "ALWAYS"
   />

  <ExecutionMode
   Mode = "OPTIMIZATION"
   />

  <Model
   ModelType  = "Rosenbrock"
   Dimensions = "2"
   X1         = "2.56"
   X2         = "-1.54"
   />

  <Optimizer
   AbortCriterium     = "1.e-5"
   NumberOfIterations = "500"
   OptimizerType      = "SimulatedAnnealing"
   />

  <!--
   Configuration example for the genetic algorithm optimizer.
   -->

  <GeneticAlgorithmOptimizer
   MutationRate      = "0.5"
   SizeOfPopulation  = "100"
   />

  <!--
   Configuration example for the particle swarm optimizer.
   -->

  <ParticleSwarmOptimizer
   C1                = "0.01"
   C2                = "0.01"
   NumberOfParticles = "100"
   />

  <!--
   Configuration example for the simulated annealing optimizer.
   -->

  <SimulatedAnnealingOptimizer
   InitialTemperature         = "600."
   TemperatureReductionFactor = "0.5"
   />

</InputFile>
