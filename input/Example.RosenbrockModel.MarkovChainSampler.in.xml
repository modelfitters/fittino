<InputFile>

  <VerbosityLevel>INFO</VerbosityLevel>

  <Model>

    <RosenbrockModel>

      <Name>3D RosenbrockModel</Name>

      <ModelParameter>
        <Name>X1</Name>
        <!--<PlotName>x_1</PlotName>-->
        <Value>2.56</Value>
        <Error>0.1</Error>
        <LowerBound>-4.</LowerBound>
        <UpperBound>4.</UpperBound>
        <Fixed>false</Fixed>
      </ModelParameter>

      <ModelParameter>
        <Name>X2</Name>
        <!--<PlotName>x_2</PlotName>-->
        <Value>-1.34</Value>
        <Error>0.1</Error>
        <LowerBound>-4.</LowerBound>
        <UpperBound>4.</UpperBound>
        <Fixed>false</Fixed>
      </ModelParameter>

      <ModelParameter>
        <Name>X3</Name>
        <!--<PlotName>x_3</PlotName>-->
        <Value>-0.61</Value>
        <Error>0.1</Error>
        <LowerBound>-4.</LowerBound>
        <UpperBound>4.</UpperBound>
        <Fixed>false</Fixed>
      </ModelParameter>

    </RosenbrockModel>

  </Model>

  <Tool>

    <MarkovChainSampler>
      <NumberOfIterations>5</NumberOfIterations>
      <RandomSeed>2</RandomSeed>
    </MarkovChainSampler>

  </Tool>

</InputFile>
