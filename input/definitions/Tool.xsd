<?xml version="1.0"?>

<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema">

<xs:include schemaLocation="tools/GeneticAlgorithmOptimizer.xsd"/>
<xs:include schemaLocation="tools/HigherOrderMarkovChainSampler.xsd"/>
<xs:include schemaLocation="tools/MarkovChainSampler.xsd"/>
