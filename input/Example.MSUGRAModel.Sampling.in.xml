<!DOCTYPE InputFile PUBLIC "" "InputFile.dtd">

<InputFile>

  <VerbosityLevel
   Level = "ALWAYS"
   />

  <ExecutionMode
   Mode = "SAMPLING"
   />

  <Model
   ModelType = "MSUGRA"
   A0        = "-300."
   M0        = "100."
   M12       = "250."
   TanBeta   = "10."
   />

  <Sampler
   NumberOfIterations = "500"
   SamplerType        = "MarkovChain"
   />

</InputFile>
