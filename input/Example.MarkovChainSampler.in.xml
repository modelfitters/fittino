<!DOCTYPE InputFile PUBLIC "" "InputFile.dtd">

<InputFile>

  <VerbosityLevel
   Level = "ALWAYS"
   />

  <ExecutionMode
   Mode = "SAMPLING"
   />

  <Model
   ModelType  = "Rosenbrock"
   Dimensions = "3"
   X1         = "0."
   X2         = "0."
   X3         = "0."
   />

  <Sampler
   NumberOfIterations = "500"
   SamplerType        = "MarkovChain"
   />

</InputFile>
